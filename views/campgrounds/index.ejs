  console.log(campgrounds);
</script>

<div id="map" style="width: 95%;margin: auto; height: 50vh;"></div>
<h1 class="text-center mb-3">All campgrounds</h1>
  <ol>
    <% for(let campground of campgrounds ){ %>
      <div class="card mb-3">
        <div class="row ">
          <div class="col-md-4 ">
            <% if( campground.images[0]!=undefined) { %>
              <img src="<%= campground.images[0].url %>" class="img-fluid " alt="" >
              <% } else if(campground.images[0]==undefined) { %>
                <img
                  src="https://source.unsplash.com/collection/483251"
                  class="img-fluid" alt="">
              <% } %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">
                <%=campground.title %>
              </h5>
              <p class="card-text">
                <%= campground.description%>
              </p>
              <p class="card-text"><small class="text-muted">
                  <%= campground.location%>
                </small></p>
              <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">View <%= campground.title%></a>
            </div>
          </div>
        </div>
      </div>
      <% }%>
</ol>


<script src="/javascript/clustermap.js"></script>